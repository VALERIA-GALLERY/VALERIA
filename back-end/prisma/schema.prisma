generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model admin {
  id    BigInt @id @default(autoincrement())
  name  String
  email String
  pass  String
}

model posts {
  id          BigInt   @id @default(autoincrement())
  description String
  date_time   String   @map("date&time")
  pic         String
  likes       Int[]
  comments    String[]
  premiem     Boolean
  userID      BigInt  
  users       users    @relation(fields: [userID], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "userID")
}

model users {
  id         BigInt  @id @default(autoincrement())
  username   String
  firstName  String
  lastName   String
  password   String
  profilePic String
  artist     Boolean
  followers  Int[]
  birthday   String
  follows    Int[]
  posts      posts[]
}
